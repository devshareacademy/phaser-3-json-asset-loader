{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "types": ["cypress"],
    "module": "CommonJS",
    "sourceMap": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "examples/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
